    "version": "0.2.0",
    "configurations": [
        {
            "name": "pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/src/python/test",
                "--asyncio-mode=auto"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/python/modules"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/python/modules"
            }
        }
    ]
}