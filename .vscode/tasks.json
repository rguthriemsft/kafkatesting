{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "PYTHONPATH": "${workspaceFolder}"
        }
    },
    "tasks": [
        {
            "label": "lint",
            "type": "shell",
            "command": "flake8",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "pytest",
            "type": "shell",
            "command": "pytest",
            "args": [
                "${workspaceFolder}/src/python/test"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}